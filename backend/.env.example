# Example backend environment variables (DO NOT store real secrets here)
# Copy to .env and fill with real values when running locally or in CI.

# Database
DATABASE_URL="postgresql://user:pass@localhost:5432/dbname"

# JWT secret for signing tokens
JWT_SECRET="replace-with-secure-random-string"

# Encryption key used by the app
ENCRYPTION_KEY="replace-with-32-byte-base64-or-similar"

# Allowed origins for widget embedding (comma-separated)
# e.g. https://example.com,https://aichatbot-yd2o.onrender.com
WIDGET_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Render/external URL for the service (optional)
RENDER_EXTERNAL_URL=https://aichatbot-yd2o.onrender.com

# Frontend/backend URL settings
FRONTEND_URL=https://aichatbot-yd2o.onrender.com
BACKEND_URL=https://aichatbot-yd2o.onrender.com

# Ensure NODE_ENV=production in production
NODE_ENV=production
